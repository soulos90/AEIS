@model StateTemplateV5Beta.Models.SurveyQuestionViewModel

@{
    ViewBag.Title = "SurveQuestions";
}

<h2>SurveQuestions</h2>

@using (Html.BeginForm("AnswerQuestion", "Survey", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.ValidationSummary(false, "", new { @class = "" })

    <div class="">
        <label class="control-label">
            @Html.LabelFor(x => x.Question)
        </label>
        <div class="controls">

            @Html.TextBoxFor(m => m.Question, new { @class = "form-control", @title = "Fill out the surevy name", @required = "", @readonly=true })
        </div>
    </div>

    <div class="">
        <label class="control-label">
            @Html.LabelFor(x => x.Answer)
        </label>
        <div class="">
            @Html.RadioButtonFor(x => x.Answer, true)
            Yes
            
        </div>
        <div class="">
            @Html.RadioButtonFor(x => x.Answer, false)
            No
            
            @Html.TextBoxFor(m => m.CurrentID)
            @Html.TextBoxFor(m => m.ProgramName)
        </div>
    </div>

    <div class="form-actions">
        <button type="submit" id="submitButton" class="btn btn-block btn-primary">
            Next
        </button>
    </div>
}