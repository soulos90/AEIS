
@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="section">

    <h1>Account Registration</h1>

    <!-- Account Information -->
    <div class="panel panel-primary">
        <div class="panel-heading"><h2>Create An Account</h2></div>
        <div class="row p-t p-l-md">
            <label>E-mail address</label><br />
        </div>
        <div class="row p-l-md">
            <input type="text" style="width:250px" placeholder="E-mail address" id="e-mail" name="eMail" tabindex="1">
        </div>
        <div class="row p-t p-l-md">
            <label>First name</label><br />
        </div>
        <div class="row p-l-md">
            <input type="text" style="width:250px" placeholder="First name" id="first-name" name="firstName" tabindex="2">
        </div>
        <div class="row p-t p-l-md">
            <label>Last name</label>
        </div>
        <div class="row p-l-md">
            <input type="text" style="width:250px" placeholder="Last name" id="last-name" name="lastName" tabindex="3">
        </div>
        <div class="row p-t p-l-md">
            <label>Organization</label>
        </div>
        <div class="row p-l-md">
            <input type="text" style="width:250px" placeholder="Organization" id="org" name="organization" tabindex="4">
        </div>
        <div class="row p-t p-l-md">
            <label>Password</label>
        </div>
        <div class="row p-l-md">
            <input type="password" style="width:250px" placeholder="Password" id="password" name="password" tabindex="5">
        </div>
        <div class="row p-t p-l-md">
            <label>Reenter password</label>
        </div>
        <div class="row p-b p-l-md">
            <input type="password" style="width:250px" placeholder="Reenter password" id="reenter-password" name="reenterPassword" tabindex="6">
        </div>
    </div> <!-- end account container -->

    <input type="submit" value="Submit" class="btn btn-lg btn-primary" />


</div> <!-- end section -->
